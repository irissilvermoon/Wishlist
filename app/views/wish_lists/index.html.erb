<h1>Listing wish_lists</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wish_lists.each do |wish_list| %>
  <tr>
    <td><%= wish_list.title %></td>
    <td><%= wish_list.description %></td>
    <td><%= link_to 'Items', wish_list_items_path(wish_list) %></td>
    <td><%= link_to 'Show', wish_list %></td>
    <td><%= link_to 'Edit', edit_wish_list_path(wish_list) %></td>
    <td><%= link_to 'Destroy', wish_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

