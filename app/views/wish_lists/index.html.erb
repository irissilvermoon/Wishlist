<h2>My Wishlists</h2>

 <% if can_edit_wish_list? %>
    <%= link_to 'New Wish List', new_wish_list_path, :class => "btn btn-primary" %>
  <% end %>
<br />

  <% @wish_lists.each do |wish_list| %>
    <div class="wishlist-grid">

        <b>Title:</b> <%= link_to wish_list.title, user_wish_list_items_path(@user, wish_list) %><br />
        <b>Description: </b><%= wish_list.description %>

            <% if can_edit_wish_list? %>
            <br />
            <%= link_to 'Edit Wishlist', edit_wish_list_path(wish_list), :class => "btn-primary btn-small" %>
            <%= link_to 'Delete Wishlist', wish_list, method: :delete,
                                             data: { confirm: 'Are you sure?' }, :class => "btn-primary btn-small" %>
        </div>
      <% end %>
    <% end %>
  <br />




  <%= paginate @wish_lists %>




