<%= form_for([@wish_list, @item]) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Item" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :link %>
    <%= f.text_field :link, 'data-new-image-url' => new_image_path %>
  </div>
  <div class="field">
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <% if @item.persisted? && @item.link != "http://" %>
    <div class="field">
      <%= f.label :image %>
      <%= link_to "choose image", new_wish_list_item_image_path(@wish_list, @item), :class => "btn btn-primary" %>
    </div>
  <% else %>
    <%= f.label :image %>
    <%= f.text_field :image %>
  <% end %>

  <br />
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
