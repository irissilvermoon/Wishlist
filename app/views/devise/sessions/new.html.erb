<% if !flash[:alert] %>
  <div class="row">
    <div class="alert alert-info">
      Welcome to Wishlist! The app that allows users to keep track of all the stuff they hope to get!
      Use this app to create your wedding registry, a christmas/birthday list, or simply to keep track
      of future purchases. Please sign in or sign up before continuing.
    </div>
  </div>
<% end %>


<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :login, "Email or Username" %>
    <%= f.text_field :login %></div>


  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
